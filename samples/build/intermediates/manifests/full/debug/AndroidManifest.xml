<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplemobiletools.commons"
    android:versionCode="1"
    android:versionName="3.7.9" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name="com.simplemobiletools.commons.samples.App"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/commons_launcher"
        android:label="@string/smtco_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.simplemobiletools.commons.samples.activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.julioapps.commons.activities.AboutActivity" />
        <activity android:name="com.julioapps.commons.activities.LicenseActivity" />
        <activity android:name="com.julioapps.commons.activities.CustomizationActivity" />

        <receiver
            android:name="com.simplemobiletools.commons.receivers.SharedThemeReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.simplemobiletools.commons.SHARED_THEME_ACTIVATED" />
                <action android:name="com.simplemobiletools.commons.SHARED_THEME_UPDATED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>